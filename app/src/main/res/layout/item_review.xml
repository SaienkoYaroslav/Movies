<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_review"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.8">

        <TextView
            android:id="@+id/text_view_review_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="16sp"
            android:padding="8dp"
            android:gravity="end"
            android:textColor="@color/white"
            tools:text="Author 007"/>

        <TextView
            android:id="@+id/text_view_review_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text_view_review_author"
            android:textSize="16sp"
            android:padding="8dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:text="Title"/>

        <TextView
            android:id="@+id/text_view_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text_view_review_title"
            android:textSize="16sp"
            android:padding="8dp"
            android:textColor="@color/white"
            tools:text="Review..."/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>