<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@android:color/holo_red_light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_name_trailer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_view_play_trailer"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="20sp"
            android:padding="8dp"
            android:textColor="@color/white"
            tools:text="Trailer name" />

        <ImageView
            android:id="@+id/image_view_play_trailer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/play_icon"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/text_view_name_trailer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>